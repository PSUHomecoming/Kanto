<%- include ("partials/header.ejs")%>
<style>
  body {
    background-image: url("https://images.onwardstate.com/uploads/2021/10/Image-from-iOS-2-3-scaled.jpg");
    background-repeat: no-repeat;
    background-size: cover;
  }
  
  .container {
    max-width: 600px;
    margin: 50px auto;
    padding: 20px;
    background-color: rgba(255, 255, 255, 0.8); /* Add a white background with 80% opacity */
    border-radius: 15px; /* Rounded corners */
  }
  
  .form-control {
    border-radius: 0;
    border: none;
    border-bottom: 2px solid #002a5c;
    font-size: 1.5em;
    color: #002a5c;
    background: transparent;
  }
  
  .form-control:focus {
    box-shadow: none;
    border-bottom: 2px solid #daa520;
  }
  
  .btn-primary {
    background-color: #002a5c;
    border-color: #daa520;
    color: #fff;
  }
  
  .btn-primary:hover {
    background-color: #daa520;
    border-color: #002a5c;
  }
  
  h1 {
    color: #002a5c;
  }
  </style>
  
  
  <div class="container">
    <h1 class="pb-3 text-center">Request an Item</h1>
    <form action="/request" method="post">
      <div class="form-group">
        <input type="text" class="form-control mb-3" name="name" placeholder="Enter Your Name">
        <input type="email" class="form-control mb-3" name="email" placeholder="Enter Your Email">
        <input type="text" class="form-control mb-3" name="committee" placeholder="Committee Name">
        <input type="text" class="form-control mb-3" name="event" placeholder="Event Needed for">
        <input type="text" class="form-control mb-3" name="quantity" placeholder="Quantity of Item">
        <input type="text" class="form-control mb-3" name="itemTime" placeholder="When do you need the items by">
      </div>
  
      <div class="form-group">
        <select name="itemDescription" class="form-control mb-3">
          <option value="value" selected>Select Item Name</option>
          <% for (i in InventoryItems){%>
            <% let dropDownItemName = InventoryItems[i].itemDescription%>
            <option value=<%=dropDownItemName%>><%=dropDownItemName%></option>
          <% } %>
        </select>
  
        <select name="itemCode" class="form-control">
          <option value="value" selected>Select Item Code</option>
          <% for (i in InventoryItems){%>
            <% let dropDownItemName = InventoryItems[i].itemCode + ": " + InventoryItems[i].itemDescription %>
            <% let dropDownItemValue = InventoryItems[i].itemCode %>
            <option value=<%=dropDownItemValue%>><%=dropDownItemName%></option>
          <% } %>
        </select>
      </div>
  
      <div class="text-center mt-5 pb-5">
        <button class="btn btn-primary btn-lg" type="submit">Request</button>
      </div>
    </form>
  </div>
  
<%- include ("partials/footer.ejs") %>
